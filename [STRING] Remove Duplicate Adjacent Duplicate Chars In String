#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
int main() {
   string str;
    int n;
    cin>>str>>n;
    for(size_t i = 0; i<str.length() ; i++){
        if(str[i]==str[i+1]){
             str.erase(str.begin()+i+1); 
        }
    }
    cout<<str[n]<<endl;
    cout<<str<<endl;
        return 0;
}
